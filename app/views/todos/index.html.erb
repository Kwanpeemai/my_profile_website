<!-- app/views/todos/index.html.erb -->
<div class="container mx-auto max-w-lg p-4">
  <h1 class="text-2xl font-bold mb-4 text-center">My Academy Quest</h1>

  <%= form_with(model: Todo.new, url: todos_path, local: true, class: "flex mb-4") do |form| %>
    <%= form.text_field :title, placeholder: "Add new task...",
      class: "flex-grow border rounded-l p-2" %>
    <%= form.submit "Add", class: "bg-blue-600 text-white px-4 rounded-r" %>
  <% end %>

  <ul class="space-y-2">
    <% @todos.each do |todo| %>
      <li class="flex items-center justify-between border p-2 rounded <%= 'line-through text-gray-500' if todo.completed %>">
        <span><%= todo.title %></span>
